<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TableRow
        android:id="@+id/tableRow4"
        android:background="#008000"> <!-- Màu xanh lá -->
        <TextView
            android:id="@+id/textView3"
            android:layout_span="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyển đổi năm dương lịch"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="8dp"
            android:gravity="center"/>
    </TableRow>

    <!-- Nhập năm dương lịch -->
    <TableRow
        android:id="@+id/tableRow1">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm dương lịch:" />

        <EditText
            android:id="@+id/editnamduonglich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="2013" />
    </TableRow>

    <!-- Nút chuyển đổi -->
    <TableRow
        android:id="@+id/tableRow2">
        <Button
            android:id="@+id/button1"
            android:layout_span="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chuyển đổi" />
    </TableRow>

    <!-- Kết quả năm âm lịch -->
    <TableRow
        android:id="@+id/tableRow3"
        android:background="#FFFF00"> <!-- Màu vàng -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm âm lịch:" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quý Tỵ"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>
